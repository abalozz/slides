doctype html
html
  head
    meta(charset="utf-8")
    title=keynote.name
    link(href="/css/keynote.css" rel="stylesheet")
  body
    input(type="hidden" value=keynote._id id="keynoteId")
    input(type="hidden" value=isSpeaker id="isSpeaker")

    each slide, index in keynote.slides
      mixin slide
        div.slide-content!=slide.markdownContent
        span.slide-number=(index + 1)
      if (index === 0)
        div.slide.visible
          +slide
      else
        div.slide
          +slide

    script(src="/socket.io/socket.io.js")
    script(src="/js/live-keynote.js")
